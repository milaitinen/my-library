<h1>マンガ目録</h1>

<div class='search_bar'>
  <%= form_with url:'/books', method: :get, local: true do |form| %>
    <%= form.text_field :key_word, placeholder:'検索' %>
    </br>
  <% end %>
  <div class="reset_link">
    <%= link_to '取り消し', books_path %>
  </div>
</div>

<p>
  <%= link_to '新規登録', new_book_path %>
</p>

<table>
  <tr align='left'>
    <th>題名</th>
    <th></th>
    <th>作者</th>
    <th>ジャンル</th>
    <th>発売年</th>
    <th>メモ</th>
    <th></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.volume %>巻</td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= book.published_year %></td>
      <td><%= book.comments %></td>
      <td><%= link_to '詳細', book_path(book) %></td>
      <td><%= link_to '編集', edit_book_path(book) %></td>
      <td><%= link_to '削除', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this manga?' } %></td>
    </tr>
  <% end %>
</table>