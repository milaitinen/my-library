<%= form_with(model: @book, local: true) do |form| %>
 
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this manga from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title, '題名' %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :volume, '巻' %><br>
    <%= form.number_field :volume, :in => 0..150, :step => '1' %>
  </p>

  <p>
    <%= form.label :author, '作者' %><br>
    <%= form.text_field :author %>
  </p>
 
  <p>
    <%= form.label :published_year, '発売年' %><br>
    <%= form.select :published_year, (Time.zone.now.year - 60)..(Time.zone.now.year) %>
  </p>

  <p>
    <%= form.label :genre, 'ジャンル' %><br>
    <%= form.select :genre,
      [['少女漫画', '少女漫画'], ['少年漫画', '少年漫画'], ['女性漫画', '女性漫画'], ["青年漫画", "青年漫画"],
      ['コメディ', 'コメディ'], ['SF', 'SF'], ['スポーツ', 'スポーツ'], ['歴史', '歴史']],
      include_blank: '選択してください' 
    %><br>
  </p>

  <p>
    <%= form.label :comments, 'メモ' %><br>
    <%= form.text_area :comments %>
  </p>
 
  <p>
    <%= form.submit '登録'%>
  </p>
 
<% end %>